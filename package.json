    "deploy": "./scripts/deploy.sh",
    "clean": "docker-compose down -v --rmi local --remove-orphans"
  },
  "keywords": [
    "vulnerability-scanner",
    "security",
    "penetration-testing",
    "docker",
    "cybersecurity"
  ],
  "author": "RemoteVulscan Team",
