{
  "name": "remotevulscan",
  "version": "1.0.0",
  "description": "Comprehensive vulnerability scanning platform with integrated security tools",
  "private": true,
  "scripts": {
    "dev": "docker-compose up -d --build",
    "build": "docker-compose build",
    "start": "docker-compose up -d",
