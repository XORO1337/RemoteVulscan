# syntax=docker/dockerfile:1

# Development Dockerfile for RemoteVulscan Frontend
# This Dockerfile is optimized for instant startup with live reloading

FROM node:20-alpine AS development

# Install basic dependencies
RUN apk add --no-cache libc6-compat curl

WORKDIR /app

# Set environment variables for development
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV HOSTNAME="0.0.0.0"
ENV PORT=3000

# Install dependencies first (this layer will be cached)
COPY frontend/package.json frontend/package-lock.json ./
RUN npm ci

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

# Start development server with hot reloading
# Source code will be mounted as volume for instant updates
CMD ["npm", "run", "dev"]
